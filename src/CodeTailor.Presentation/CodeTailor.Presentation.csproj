<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet Package Metadata -->
    <PackageId>CodeTailor.Presentation</PackageId>
    <Version>1.0.0</Version>
    <Authors>SimonSCC</Authors>
    <Company>SimonSCC</Company>
    <Description>Presentation layer utilities for CodeTailor toolkit. Includes API controllers, view models, DTOs, and presentation patterns for Clean Architecture.</Description>
    <PackageProjectUrl>https://github.com/SimonSCC/CodeTailor</PackageProjectUrl>
    <RepositoryUrl>https://github.com/SimonSCC/CodeTailor</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>presentation;api;controllers;viewmodels;dto;clean-architecture</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
